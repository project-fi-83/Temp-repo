#include<iostream>
#include<string>
using namespace std;


class Hero
{
private:
	string name;
	int xp;
	int defence;
	int strength;
	int money;
	int level;
	int mana;
public:
	Hero();
	void Change_strenght(int value)
	{
		this->strength += value;
	}
	void Change_defence(int value)
	{
		this->defence += value;
	}
	~Hero();
};



int main()
{
	system("pause");
	return 0;
}

Hero::Hero()
{
	this->name = "";
	this->level = 0;
	this->mana = 0;
	this->money = 100000;// Можем поменять
	this->strength = 0;
	this->xp = 0;
	this->defence = 0;
}

Hero::~Hero()
{
}
